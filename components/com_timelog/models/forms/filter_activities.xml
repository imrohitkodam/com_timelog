<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label=""
			hint="COM_TIMELOG_SEARCH_FILTER_SUBMIT"
			description="COM_TIMELOG_SEARCH_TOOLS_DESC"
		/>
		<field name="client_id"
		   type="activity"
		   label=""
		   onchange="this.form.submit();"
		/>

		<field
			name="date_from"
			type="calendar"
			translateformat="false"
			format="%d-%m-%Y"
			showtime="false"
			filter="user_utc"
			default=""
			singleheader="true"
			filltable="true"
			hint="COM_TIMELOG_ACTIVITY_FILTER_START_DATE_LABEL"
			class="calendar-textfield-class"
			todaybutton="true"
			onchange="this.form.submit();"
		/>

		<field
			name="date_to"
			type="calendar"
			translateformat="false"
			format="%d-%m-%Y"
			showtime="false"
			filter="user_utc"
			default=""
			singleheader="true"
			filltable="true"
			hint="COM_TIMELOG_ACTIVITY_FILTER_DUE_DATE_LABEL"
			class="calendar-textfield-class"
			todaybutton="true"
			onchange="this.form.submit();"
		/>

<!--
		<field name="activity_type" type="activitytype"
				label=""
			 onchange="this.form.submit();"
		/>
-->
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="inputbox input-mini pull-right"
			default=""
			onchange="this.form.submit();"
		/>
	</fields>
</form>
